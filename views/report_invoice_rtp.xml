<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template
        id="report_invoice_document_rtp_link"
        inherit_id="account.report_invoice_document">

        <!-- Insert RTP payment link near payment terms -->
        <xpath expr="//div[@id='payment_term']/div[last()]" position="after">
            <div class="mb-3" t-if="o.rtp_payment_link">
                <div class="mt-2">
                    <strong>Payment Link:</strong>
                    <a t-att-href="o.rtp_payment_link"
                       target="_blank"
                       style="color:#007bff; text-decoration: underline;">
                        Click here to pay
                    </a>
                </div>
            </div>
        </xpath>

    </template>
</odoo>
