<odoo>
    <data>
        <record id="view_move_form_rtp_link" model="ir.ui.view">
            <field name="name">account.move.form.rtp.link</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet/notebook/page[@name='other_info']" position="inside">
                    <group string="RTP Payment (LodinPay)">
                        <field name="rtp_payment_link" readonly="1" widget="url"/>

                        <span class="text-danger o_form_label mt8">⚙️ To activate this feature:</span>
                        <p class="text-muted">
                            Register here → https://merchant-preprod.lodinpay.com/auth/login<br/>
                            Then go to Tokens tab to get Client ID, Client Secret &amp; Device Static ID<br/>
                            Finally configure them in → Settings → LodinPay Settings
                        </p>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
