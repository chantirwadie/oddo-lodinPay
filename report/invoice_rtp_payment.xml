<odoo>
    <template id="report_invoice_rtp" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='payment_term']" position="before">
            <t t-if="o.rtp_payment_link">
                <div class="mt-3 mb-3">
                    <strong>LodinPay Payment Link:</strong>
                    <a t-att-href="o.rtp_payment_link"
                       style="color:#007bff; text-decoration: underline;"
                       target="_blank">
                        Pay your invoice online
                    </a>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
